.col-md-4
  .blog-main.box.text-center{:id => "step_#{step.id}"}
    .panel.panel-info
      .panel-heading
        %h3.panel-title= step.description
      .btn-group{"aria-label" => "...", :role => "group"}
        %button.glyphicon.glyphicon-edit.edit{:"data-toggle" => "modal", :type => "button",
        :"data-target" => "#myupdatestep_#{step.id}"}
          Edit
      = link_to '', step, method: :delete, class: "glyphicon glyphicon-remove delete-comment-icon", remote: true
      = link_to 'SHOW', step, class: "glyphicon glyphicon-picture"

  = form_for(step, :method => :put, remote: true) do |f|
    .modal.fade{"aria-labelledby" => "myModalLabel", :id => "myupdatestep_#{step.id}", :role => "dialog", :tabindex => "-1"}
      .modal-dialog
        .modal-content
          .modal-header
            %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :tupe => "button"}
              %span{"aria-hidden" => "true"} Ã—
            %h4#myModalLabel.modal-title Edit
          .modal-body
            .field
              = f.label :description
              %br/
              = f.text_area :description, class: "form-control"
          .modal-footer
            %button.btn.btn-default{"data-dismiss" => "modal", :id => "myupdatebutton_#{step.id}", :type => "button"} Close
            = submit_tag "Update", class: "btn btn-primary"
