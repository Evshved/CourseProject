#comment
  .sa
    = comment.user.name
  .span
    = comment.created_at
  = comment.content
  - if comment.user == current_user
    = link_to step_comment_path(@step, comment), method: :delete, data: {step_id: @step.id, value: @step.comments.count, confirm: "Are you sure?" }, remote: true, id: "delete-#{comment.id}", class: "delete-comment" do
      %span(class="glyphicon glyphicon-remove delete-comment-icon")
